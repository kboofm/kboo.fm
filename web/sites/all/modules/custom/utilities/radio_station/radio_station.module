function radio_station_node_presave($node) {
  if (RadioConfig::get("onsave_clear_cache_schedule")) {
    $cache = new ScheduleCache();
    $cache->clear($node);
  }

  if (RadioConfig::get("onsave_clear_cache_sidebar")) {
    $cache = new SidebarCache();
    $cache->clear($node);
  }
}
